<script>
    $(document).ready(function () {
        $('#delMessage').on('click', function (e) {
            e.preventDefault();

            $('#confirm-delete-modal').modal('show');

            $('#deleteForm').empty();
            let url = `/deleteUser/{{user._id}}`;
            let href = $(`<a href="/userDetails/{{user._id}}" class="btn btn-default" style="margin-right: 15px">Cancel</a>
                  <a href="${url}"><input class="btn btn-danger delete-btn-confirm" value="Delete" /></a>`);
            $('#deleteForm').append(href);
        });

        $('#close-delete').on('click', (e) => {
            $('#confirm-delete-modal').modal('hide');
        });
    });
</script>


