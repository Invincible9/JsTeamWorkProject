<script>

    $(document).ready(function () {
        $('.spanTrash').on('click', function (e) {
            e.preventDefault();
            let str = e.currentTarget.href;
            str = str.substring(str.lastIndexOf('/') + 1);


            $('.delete-btn-confirm').attr('id', str);

            $('#confirm-delete-modal').modal('show');

            $('#deleteForm').empty();
            let hrefAddress = `/deletePartCommentByAuthor/${str}`;
            let href = $(`<a href="/parts/{{part._id}}" class="btn btn-default" style="margin-right: 15px">Cancel</a>
                  <a href="${hrefAddress}"><input type="submit" class="btn btn-danger delete-btn-confirm" value="Delete" /></a>`);
            $('#deleteForm').append(href);
        });

        $('#close-delete').on('click', (e) => {
            $('#confirm-delete-modal').modal('hide');
        });
    });
</script>


