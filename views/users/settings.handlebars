<div class="container-fluid">
    <div class="row fh5co-post-entry single-entry">
        <article
                class="col-lg-8 col-lg-offset-2 col-md-8 col-md-offset-2 col-sm-8 col-sm-offset-2 col-xs-12 col-xs-offset-0">
            <figure class="animate-box">
                <img src="/images/CarPictures/{{car.id}}" alt="{{car.model}}">
            </figure>
            {{!-- <span class="fh5co-meta animate-box"><a href="#">{{car.model}}</a></span>
            <h2 class="fh5co-article-title animate-box"><a href="#">{{car.location}} {{car.price}}$</a></h2>
            <span class="fh5co-meta fh5co-date animate-box">{{car.date}}</span> --}}


            <div class="col-lg-12 col-lg-offset-0 col-md-12 col-md-offset-0 col-sm-12 col-sm-offset-0 col-xs-12 col-xs-offset-0 text-left content-article">
                <h1>User Settings:</h1>
                <div class="row">
                    <div class="col-lg-8 cp-r animate-box">
                        <p> Name: {{user.firstName}}<br/>
                            Last Name: {{user.lastName}}<br/>

                            {{!-- {{#if car.rightToVoteUp}}
                                Like: <a href="/likeCar/{{car.id}}"><span class="glyphicon glyphicon-thumbs-up"></span></a>
                                {{else}}
                                Like: <a href="/likeCar/{{car.id}}" onclick="return false;"><span class="glyphicon glyphicon-thumbs-up"></span></a>
                            {{/if}} --}}
                        </p>


                        <p>
                            Add A Profile Picture:<br/>
                        <form class="form-group" enctype="multipart/form-data" method="post"
                              action="/users/uploadProfilePicture/{{user._id}}">
                            <input class="form-control" type="file" name="profilePictureURL"/>
                            <input type="Submit" value="Upload Picture"/>
                        </form>
                        </p>

                    </div>


                </div>

                <div>
                    <p> DELETE profile:</p>
                        <a href="/users/deleteProfile/{{user._id}}" id="deleteAccount" class="btn btn-danger">REMOVE ACCOUNT</a>
                        <!--<form class="form-group" method="get" action="/users/deleteProfile/{{user._id}}">-->
                        <!--<input class="btn btn-danger" type="Submit" value="REMOVE ACCOUNT"/>-->
                        <!--</form>-->
                </div>
            </div>

        </article>
    </div>
</div>

<div id="confirm-delete-modal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body" style="text-align: center;">
                <span>Are you sure you want to delete account</span><br/>
                <span>This action will be permanent.</span>
            </div>
            <div class="modal-footer" style="text-align: center;" id="deleteForm">

            </div>
        </div>
    </div>
</div>

<footer id="fh5co-footer">
    <p>
        <small>&copy; 2016. Magazine Free HTML5. All Rights Reserverd. <br> Designed by <a href="http://freehtml5.co"
                                                                                           target="_blank">FREEHTML5.co</a>
            Demo Images: <a href="http://unsplash.com/" target="_blank">Unsplash</a></small>
    </p>
</footer>

<script>
    $(document).ready(function () {
        $('#deleteAccount').on('click', function (e) {
            e.preventDefault();

            $('#confirm-delete-modal').modal('show');

            $('#deleteForm').empty();
            let hrefAddress = `/users/deleteProfile/{{user._id}}`;
            let href = $(`<a href="/users/settings/{{user._id}}" class="btn btn-default" style="margin-right: 15px">Cancel</a>
                  <a href="${hrefAddress}"><input type="submit" class="btn btn-danger delete-btn-confirm" value="Delete" /></a>`);
            $('#deleteForm').append(href);
        });

        $('#close-delete').on('click', (e) => {
            $('#confirm-delete-modal').modal('hide');
        });
    });
</script>


</body>




















